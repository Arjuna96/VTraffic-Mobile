<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#f45a2b" android:startColor="#f03c07" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="60dp" android:height="60dp" />
            <stroke android:width="1dp" android:color="#bf2604" />
            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#f0940a" android:startColor="#f26716" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="60dp" android:height="60dp" />
            <stroke android:width="0.5dp" android:color="#f03c07" />
            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>
</selector>