<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#cce6ff" android:startColor="#1a8cff" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="60dp" android:height="60dp" />
            <stroke android:width="1dp" android:color="#d9b3ff" />
            <corners android:radius="@dimen/rebtn_corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#99b3ff" android:startColor="#4d79ff" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="60dp" android:height="60dp" />
            <stroke android:width="0.5dp" android:color="#cce6ff" />
            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>
</selector>