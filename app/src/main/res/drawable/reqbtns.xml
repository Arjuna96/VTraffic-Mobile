<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#31b466" android:startColor="#76a665" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="60dp" android:height="60dp" />
            <stroke android:width="1dp" android:color="#90ad56" />
            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#4b8443" android:startColor="#a5bd4d" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="60dp" android:height="60dp" />

            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>
</selector>