<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmaincolor"
    tools:context="org.example.vtraffic.activity.ReqActivity">

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text='Request Green'
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/req_head_color"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_action_backbtn"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="500dp"
        android:layout_height="450dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tvState"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/state_clr"
        android:layout_below="@+id/ivBack"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Current State ID:"
        android:textColor="@color/state_clr"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/tvState"
        android:layout_alignLeft="@+id/tvConfirm"
        android:layout_alignStart="@+id/tvConfirm"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp" />

</RelativeLayout>
