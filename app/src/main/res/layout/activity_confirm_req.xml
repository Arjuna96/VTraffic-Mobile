<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmaincolor"
    tools:context="org.example.vtraffic.activity.ConfirmReqActivity">


    <ImageView
        android:id="@+id/confirm_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/bConfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/tvConfirm" />


    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text='Confirm Green'
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/req_head_color"
        android:layout_below="@+id/ivBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/bConfirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="confirm request"
        android:background="@drawable/reqbtns"/>
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/ic_action_backbtn"
        android:clickable="true"/>

</RelativeLayout>
