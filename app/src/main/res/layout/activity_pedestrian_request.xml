<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pbck"
    tools:context="org.example.vtraffic.activity.PedestrianRequestActivity">


    <ImageView
        android:id="@+id/ivRequestBoard"
        android:layout_width="800dp"
        android:layout_height="350dp"
        app:srcCompat="@drawable/road"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="82dp" />

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text='Send a "Request"'
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/req_ped_color"/>

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/ic_action_back"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_action_pedestrain"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tvConfirm"
        android:layout_alignStart="@+id/tvConfirm"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/bRequestGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivRequestBoard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Request Green "
        android:background="@drawable/request_green_pedestrian"/>


</RelativeLayout>
