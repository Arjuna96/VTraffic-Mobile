<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:padding="20dp"
    android:elevation="@dimen/elevation_high"
    android:weightSum="1">



    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textSize="8mm"
        android:textStyle="bold"
        android:textColor="@color/colorMainPageTopic"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/etEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Username (E-mail)"
        android:layout_above="@+id/etPassword"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/hint_color"
        android:layout_marginBottom="20dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_username"
        android:textColor="@color/text_color"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail"
        android:hint="Password"
        android:textColorHint="@color/hint_color"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_password"
        android:textColor="@color/text_color"/>

    <Button
        android:id="@+id/bLogin"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="3mm"
        android:background="@drawable/login_buttons"
        android:padding ="@dimen/menu_button_padding"
        android:layout_above="@+id/tvRegisterAsk"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvRegisterAsk"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:text="Don't you have an account?"
        android:textColor="@color/colorMainPageTopic"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/bSignUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bSignUp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/login_buttons"
        android:text="SIGNUP"

        android:textAlignment="center"
        android:textSize="3mm"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:padding ="@dimen/menu_button_padding"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bLogin"
        android:layout_alignStart="@+id/bLogin" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vtrffic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tvLogin" />


</RelativeLayout>