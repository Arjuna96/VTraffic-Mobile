<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmaincolor"

    tools:context="org.example.vtraffic.activity.RegisterActivity">

    <TextView
        android:id="@+id/tvRegisterHeading"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_marginTop="69dp"
        android:text="REGISTER"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="8mm"
        android:textColor="#0033cc"/>

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvRegisterHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="@color/text_reg_color"
        android:textColorHint="@color/text_hint_color" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etFirstName"
        android:layout_alignStart="@+id/etFirstName"
        android:layout_below="@+id/etFirstName"
        android:layout_marginTop="19dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColor="@color/text_reg_color"
        android:textColorHint="@color/text_hint_color" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etLastName"
        android:layout_alignStart="@+id/etLastName"
        android:layout_below="@+id/etLastName"
        android:layout_marginTop="20dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/text_reg_color"
        android:textColorHint="@color/text_hint_color" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="22dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/text_reg_color"
        android:textColorHint="@color/text_hint_color" />

    <EditText
        android:id="@+id/etReEnterPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="18dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Re-Enter Password"
        android:inputType="textPassword"
        android:textColor="@color/text_reg_color"
        android:textColorHint="@color/text_hint_color" />

    <Button
        android:id="@+id/bRegister"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etReEnterPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="REGISTER"
        android:background="@drawable/registerbutton"/>
</RelativeLayout>